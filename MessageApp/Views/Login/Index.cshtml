@model UserSignInModel
@{
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}
<div class="content align-items-center">
    <div class="w-100 ">
        <div class="login-left">

            <div class="account-content">
                <div class="login-header">
                    <a href="#">
                        <img src="~/template2/assets/img/logo-full.png" alt="">
                    </a>
                </div>
                <div class="form-col">
                    <div class="login-text-details">
                        <h3>GİRİŞ YAP</h3>
                    </div>
                    <form method="post">
                        <div class="form-group">
                            <label>KULLANICI ADI</label>
                            <input class="form-control form-control-lg group_formcontrol" asp-for="UserName" type="text">
                        </div>
                        <div class="form-group">
                            <label>ŞİFRE</label>
                            <input class="form-control form-control-lg group_formcontrol" asp-for="Password" type="text">
                        </div>
                        <div class="pt-1">
                            <div class="text-center">
                                <button class="btn newgroup_create btn-block d-block w-100" type="submit">Giriş Yap</button>
                            </div>
                        </div>
                        <div class="text-center dont-have">Don’t have an account? <a href="/Register/Index">Üye Ol</a></div>
                    </form>
                </div>
            </div>

        </div>
        <div class="login-right">
        </div>
    </div>
</div>